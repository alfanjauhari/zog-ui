{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "allowJs": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "noEmit": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2020"
    },
    "exclude": ["node_modules"]
}
