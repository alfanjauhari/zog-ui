{
    "name": "@repo/core-ui",
    "version": "0.0.0",
    "private": true,
    "sideEffects": ["**/*.css"],
    "files": ["dist"],
    "scripts": {
        "dev": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --watch",
        "build": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --minify",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "exports": {
        "./button.css": "./src/styles/button.css.ts",
        "./tailwind.css": "./dist/tailwind.css",
        "./utils": "./src/utils.ts"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^2.6.0",
        "tailwind-variants": "^0.3.0",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss-motion": "^1.0.1"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@repo/config-typescript": "workspace:*",
        "@tailwindcss/cli": "4.0.0-beta.8",
        "tailwindcss": "4.0.0-beta.8",
        "typescript": "catalog:"
    },
    "publishConfig": {
        "access": "public"
    }
}
